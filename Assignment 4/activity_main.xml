<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/example"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/example"
            android:textAlignment="center" />

        <hw.appdev.example.android.assignment4.CircleAnimationView
            android:id="@+id/circleView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:circleColor="@android:color/holo_blue_light"
            app:circleRadius="25dp"
            app:circleSpeed="0dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/create_your_own"
            android:textAlignment="center"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lastRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/colorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/color"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/red"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@android:color/holo_red_light"
            android:layout_toEndOf="@id/colorText"
            android:layout_marginEnd="10dp"/>

        <Button
            android:id="@+id/orange"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#ffa500"
            android:layout_toEndOf="@id/red"
            android:layout_alignBottom="@id/colorText"
            android:layout_marginEnd="10dp"/>

        <Button
            android:id="@+id/green"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#32cd32"
            android:layout_toEndOf="@id/orange"
            android:layout_alignBottom="@id/colorText"
            android:layout_marginEnd="10dp"/>

        <Button
            android:id="@+id/blue"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#0000ff"
            android:layout_toEndOf="@id/green"
            android:layout_alignBottom="@id/colorText"
            android:layout_marginEnd="10dp"/>

        <Button
            android:id="@+id/yellow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#ffff00"
            android:layout_toEndOf="@id/blue"
            android:layout_alignBottom="@id/colorText"
            android:layout_marginEnd="10dp"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="@string/add"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/lastRow"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/radius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radius"
            android:layout_alignParentStart="true"/>

        <EditText
            android:id="@+id/radius_text"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/radius"
            android:layout_alignBottom="@id/radius"/>


        <EditText
            android:id="@+id/speed_text"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/radius"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/speed"
            android:layout_toStartOf="@id/speed_text"/>

    </RelativeLayout>

</RelativeLayout>
